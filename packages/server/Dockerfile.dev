# ===========================================
# GeoTIFF Processing API Server - Development Build
# ===========================================

FROM node:20-alpine

# Install GDAL and development dependencies
RUN apk add --no-cache \
    gdal \
    gdal-dev \
    proj \
    proj-dev \
    geos \
    geos-dev \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Create temp directory for processing
RUN mkdir -p /tmp/geotiff-processing

# Expose port
EXPOSE 3001

# Start development server
CMD ["npm", "run", "start:dev"]