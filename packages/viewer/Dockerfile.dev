# ===========================================
# Leaflet Viewer Frontend - Development Build
# ===========================================

FROM node:20-alpine

# Install dependencies for building native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]