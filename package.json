{
  "name": "leaflet-viewer-monorepo",
  "version": "1.0.2",
  "private": true,
  "description": "Enterprise GeoTIFF Processing and Visualization Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:viewer\" \"npm run dev:server\"",
    "dev:viewer": "npm run dev --workspace=packages/viewer",
    "dev:server": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces",
    "build:viewer": "npm run build --workspace=packages/viewer",
    "build:server": "npm run build --workspace=packages/server",
    "test": "npm run test --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf packages/*/dist packages/*/.next packages/*/node_modules/.cache",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/node": "^20",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kauf3r/leaflet-viewer.git"
  },
  "keywords": [
    "geotiff",
    "gis",
    "mapping",
    "leaflet",
    "visualization",
    "monorepo",
    "nestjs",
    "react",
    "typescript"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
