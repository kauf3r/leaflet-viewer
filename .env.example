# GeoTIFF Showcase Tool - Environment Variables Template
# Copy this file to .env.local and update with your values

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="GeoTIFF Showcase Tool"

# Database (Optional - for user sessions/preferences)
# DATABASE_URL=postgresql://username:password@localhost:5432/leaflet_viewer

# Cloud Storage (Optional - for hosted GeoTIFF files)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-geotiff-bucket

# Google Cloud Storage (Alternative)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_PRIVATE_KEY=your-private-key
# GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GOOGLE_CLOUD_STORAGE_BUCKET=your-geotiff-bucket

# Azure Blob Storage (Alternative)
# AZURE_STORAGE_ACCOUNT_NAME=your-account-name
# AZURE_STORAGE_ACCOUNT_KEY=your-account-key
# AZURE_STORAGE_CONTAINER_NAME=geotiff-container

# Security Configuration
# NEXTAUTH_SECRET=your-nextauth-secret-key-here
# NEXTAUTH_URL=http://localhost:3000

# Performance & Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ORG=your-sentry-org
# SENTRY_PROJECT=your-sentry-project

# File Processing Configuration
NEXT_PUBLIC_MAX_FILE_SIZE_MB=1024
NEXT_PUBLIC_SUPPORTED_FORMATS=tif,tiff,gtiff
NEXT_PUBLIC_MAX_CONCURRENT_LAYERS=4

# Map Configuration
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LAT=0
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LNG=0
NEXT_PUBLIC_DEFAULT_ZOOM_LEVEL=2
NEXT_PUBLIC_MAX_ZOOM_LEVEL=18
NEXT_PUBLIC_MIN_ZOOM_LEVEL=1

# Tile Server Configuration (Optional)
# NEXT_PUBLIC_TILE_SERVER_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
# NEXT_PUBLIC_SATELLITE_TILE_URL=https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}

# Development & Debugging
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Rate Limiting (for production)
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Webhook Configuration (for processing notifications)
# WEBHOOK_SECRET=your-webhook-secret
# PROCESSING_WEBHOOK_URL=https://your-app.com/api/webhooks/processing