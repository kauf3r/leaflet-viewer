# ===========================================
# GeoTIFF Processing Platform - Environment Variables
# ===========================================

# ----- Application Configuration -----
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ----- Database Configuration -----
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_PASSWORD=pass
DB_DATABASE=geotiff_db
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_SSL=false
DB_MAX_CONNECTIONS=100
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# ----- AWS Configuration -----
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=geotiff-processing-bucket

# ----- Processing Configuration -----
MAX_FILE_SIZE=53687091200  # 50GB in bytes
TILE_SIZE=256
MAX_ZOOM_LEVEL=18
TEMP_DIRECTORY=/tmp/geotiff-processing

# ----- Authentication Configuration -----
JWT_SECRET=super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=7d

# ----- Frontend Configuration (for Next.js) -----
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here
NEXT_PUBLIC_APP_NAME=GeoTIFF Viewer
NEXT_PUBLIC_APP_VERSION=1.0.2

# ----- Development Tools -----
VITE_API_URL=http://localhost:3001/api/v1

# ----- Optional: External Services -----
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200